<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/_5sdp"
    android:layout_margin="@dimen/_2sdp"
    android:background="@drawable/border_rounded_corner_transparent"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/event1"
        android:id="@+id/imgEvent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_toLeftOf="@+id/imageDelete"
        android:layout_toRightOf="@+id/imgEvent"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:textColor="#000"
            android:layout_toRightOf="@+id/imgEvent"
            android:text="1st Event 24th Birthday!"
            android:id="@+id/txtEventName"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:textColor="#000"
            android:layout_toRightOf="@+id/imgEvent"
            android:text="29th aug"
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/txtEventDate"/>



    </LinearLayout>



    <ImageView
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/ic_delete"
        android:layout_alignParentRight="true"
        android:id="@+id/imageDelete"/>

</RelativeLayout>
